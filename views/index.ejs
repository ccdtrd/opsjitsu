<!DOCTYPE html>
<html ng-app>
  <head>
    <title>Bootstrap 101 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="stylesheets/bootstrap.css" rel="stylesheet" media="screen">
    
    <!-- Custom styles for this template -->
    <link href="stylesheets/index.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
  </head>
  <body ng-controller="SnippetListCtrl">
	<div class="container">
    <div class="snippets">
      <form class="snippets-form" method="POST" action="upload">
        <div class="row">
          <div class="col-lg-12">
            <textarea class="form-control" rows="3" name="snippet" ng-model="yourName" placeholder="Paste OpsJitsu Code Here" autofocus></textarea>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10">
          </div>
          <div class="col-md-2 snippets-form-submit">
            <button class="btn btn-primary btn-block" type="submit">Post</button>
          </div>
        </div>
      </form>
        

      <div class="snippets-list">
        <div class="row snippets-list-row" ng-repeat="snippet in snippets">
          <div class="col-md-12 snippets-list-row-code">
            <pre>{{snippet.body}}</pre>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /container -->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="javascripts/bootstrap.js"></script>

    <!-- my own magic -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
    <script src="javascripts/controllers.js"></script>
  </body>
</html>